@page
@model EvrakTakip.Pages.EvrakTipleri.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">Yeni Evrak Tipi Oluştur</h2>
<br />
<form method="post">
    <div class="border backgroundwhite">
        <div class="form-group row">
            <div class="col-2">Evrak Adı:
                @*<label asp-for="EvrakTipi.EvrakAdi"></label>*@
            </div>
            <div class="col-5">
                <input asp-for="EvrakTipi.EvrakAdi" class="form-control" />
            </div>
            <span asp-validation-for="EvrakTipi.EvrakAdi" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">Evrak Fiyatı:
                @*<label asp-for="EvrakTipi.EvrakFiyati"></label>*@
            </div>
            <div class="col-5">
                <input asp-for="EvrakTipi.EvrakFiyati" class="form-control" />
            </div>
            <span asp-validation-for="EvrakTipi.EvrakFiyati" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_OlusturVeGeriDonButonlari" />
            </div>
        </div>

    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
